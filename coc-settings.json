{
    "languageserver": {
      "bash": {
        "command": "bash-language-server",
        "args": ["start"],
        "filetypes": ["sh"],
        "ignoredRootPaths": ["~"]
      },
      "dockerfile": {
        "command": "docker-langserver",
        "filetypes": ["dockerfile"],
        "args": ["--stdio"]
      },
      "terraform": {
        "command": "terraform-ls",
        "args": ["serve"],
        "filetypes": [
                "terraform",
                "tf"
        ],
        "initializationOptions": {},
        "settings": {}
      },
      "golang": {
          "command": "gopls",
          "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
          "filetypes": ["go"]
        }
    }    
}
